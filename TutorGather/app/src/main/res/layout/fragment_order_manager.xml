<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">
    <TextView
            android:id="@+id/textViewLabelManager"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"

            android:textSize="@dimen/order_labelTextSize"
            android:text="身份"
            android:layout_marginStart="20dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/Sentbutton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="已发布"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@id/Acceptbutton"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

        <Button
                android:id="@+id/Acceptbutton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="已接单"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/Sentbutton"
                app:layout_constraintEnd_toStartOf="@id/Completedbutton"
                app:layout_constraintHorizontal_bias="0.447"
                app:layout_constraintStart_toEndOf="@id/Sentbutton"
                app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

        <Button
                android:id="@+id/Completedbutton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/toolbar2"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:backgroundTint="@color/white"
                android:text="已完成"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.447"
                app:layout_constraintStart_toEndOf="@id/Acceptbutton"
                app:layout_constraintTop_toBottomOf="@+id/toolbar2" />


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/orderMangerListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

</LinearLayout>